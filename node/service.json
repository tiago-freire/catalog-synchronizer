{
  "memory": 1024,
  "ttl": 1440,
  "timeout": 60,
  "cpu": {
    "type": "shared",
    "value": 5,
    "scalingPercentage": 20
  },
  "minReplicas": 8,
  "maxReplicas": 80,
  "workers": 1,
  "routes": {
    "catalogSynchronizer": {
      "path": "/_v/catalogsynchronizer",
      "public": true,
      "policies": [
        {
          "effect": "allow",
          "actions": ["post", "options"]
        }
      ]
    },
    "getSettings": {
      "path": "/_v/catalogsynchronizer/get-settings",
      "public": true,
      "policies": [
        {
          "effect": "allow",
          "actions": ["get", "post", "options"]
        }
      ]
    },
    "updateSettings": {
      "path": "/_v/catalogsynchronizer/update-settings",
      "public": true,
      "policies": [
        {
          "effect": "allow",
          "actions": ["post", "options"]
        }
      ]
    }
  }
}
